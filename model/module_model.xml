      <classpath refid="model.module.classpath"/>
      <src refid="model.module.test.sourcepath"/>
      <patternset refid="excluded.from.compilation.model"/>
    </javac2>
    
    <copy todir="${model.testoutput.dir}">
      <fileset dir="${module.model.basedir}/src/test/java">
        <patternset refid="compiler.resources"/>
        <type type="file"/>
      </fileset>
    </copy>
  </target>
  
