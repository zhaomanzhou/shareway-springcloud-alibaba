<?xml version="1.0" encoding="UTF-8"?>
<project name="module_mybatisgenerator" default="compile.module.mybatisgenerator">
  <dirname property="module.mybatisgenerator.basedir" file="${ant.file.module_mybatisgenerator}"/>
  
  <property name="module.jdk.home.mybatisgenerator" value="${project.jdk.home}"/>
  <property name="module.jdk.bin.mybatisgenerator" value="${project.jdk.bin}"/>
  <property name="module.jdk.classpath.mybatisgenerator" value="${project.jdk.classpath}"/>
  
  <property name="compiler.args.mybatisgenerator" value="-encoding UTF-8 -source 8 -target 1.8 ${compiler.args}"/>
  
  <property name="mybatisgenerator.output.dir" value="${module.mybatisgenerator.basedir}/target/classes"/>
  <property name="mybatisgenerator.testoutput.dir" value="${module.mybatisgenerator.basedir}/target/test-classes"/>
  
  <path id="mybatisgenerator.module.bootclasspath">
    <!-- Paths to be included in compilation bootclasspath -->
  </path>
  
  <path id="mybatisgenerator.module.production.classpath">
    <path refid="${module.jdk.classpath.mybatisgenerator}"/>
  </path>
  
  <path id="mybatisgenerator.runtime.production.module.classpath">
    <pathelement location="${mybatisgenerator.output.dir}"/>
  </path>
  
  <path id="mybatisgenerator.module.classpath">
    <path refid="${module.jdk.classpath.mybatisgenerator}"/>
    <pathelement location="${mybatisgenerator.output.dir}"/>
  </path>
  
  <path id="mybatisgenerator.runtime.module.classpath">
    <pathelement location="${mybatisgenerator.testoutput.dir}"/>
    <pathelement location="${mybatisgenerator.output.dir}"/>
  </path>
  
  
  <patternset id="excluded.from.module.mybatisgenerator">
    <patternset refid="ignored.files"/>
  </patternset>
  
  <patternset id="excluded.from.compilation.mybatisgenerator">
    <patternset refid="excluded.from.module.mybatisgenerator"/>
  </patternset>
  
  <path id="mybatisgenerator.module.sourcepath">
    <dirset dir="${module.mybatisgenerator.basedir}">
      <include name="src/main/java"/>
      <include name="src/main/resources"/>
    </dirset>
  </path>
  
  <path id="mybatisgenerator.module.test.sourcepath">
    <dirset dir="${module.mybatisgenerator.basedir}">
      <include name="src/test/java"/>
    </dirset>
  </path>
  
  
  <target name="compile.module.mybatisgenerator" depends="compile.module.mybatisgenerator.production,compile.module.mybatisgenerator.tests" description="Compile module mybatisgenerator"/>
  
  <target name="compile.module.mybatisgenerator.production" depends="register.custom.compilers" description="Compile module mybatisgenerator; production classes">
    <mkdir dir="${mybatisgenerator.output.dir}"/>
    <javac2 destdir="${mybatisgenerator.output.dir}" debug="${compiler.debug}" nowarn="${compiler.generate.no.warnings}" memorymaximumsize="${compiler.max.memory}" fork="true" executable="${module.jdk.bin.mybatisgenerator}/javac">
      <compilerarg line="${compiler.args.mybatisgenerator}"/>
      <bootclasspath refid="mybatisgenerator.module.bootclasspath"/>
      <classpath refid="mybatisgenerator.module.production.classpath"/>
      <src refid="mybatisgenerator.module.sourcepath"/>
      <patternset refid="excluded.from.compilation.mybatisgenerator"/>
    </javac2>
    
    <copy todir="${mybatisgenerator.output.dir}">
      <fileset dir="${module.mybatisgenerator.basedir}/src/main/java">
        <patternset refid="compiler.resources"/>
        <type type="file"/>
      </fileset>
      <fileset dir="${module.mybatisgenerator.basedir}/src/main/resources">
        <patternset refid="compiler.resources"/>
        <type type="file"/>
      </fileset>
    </copy>
  </target>
  
  <target name="compile.module.mybatisgenerator.tests" depends="register.custom.compilers,compile.module.mybatisgenerator.production" description="compile module mybatisgenerator; test classes" unless="skip.tests">
    <mkdir dir="${mybatisgenerator.testoutput.dir}"/>
    <javac2 destdir="${mybatisgenerator.testoutput.dir}" debug="${compiler.debug}" nowarn="${compiler.generate.no.warnings}" memorymaximumsize="${compiler.max.memory}" fork="true" executable="${module.jdk.bin.mybatisgenerator}/javac">
      <compilerarg line="${compiler.args.mybatisgenerator}"/>
      <bootclasspath refid="mybatisgenerator.module.bootclasspath"/>
      <classpath refid="mybatisgenerator.module.classpath"/>
      <src refid="mybatisgenerator.module.test.sourcepath"/>
      <patternset refid="excluded.from.compilation.mybatisgenerator"/>
    </javac2>
    
    <copy todir="${mybatisgenerator.testoutput.dir}">
      <fileset dir="${module.mybatisgenerator.basedir}/src/test/java">
        <patternset refid="compiler.resources"/>
        <type type="file"/>
      </fileset>
    </copy>
  </target>
  
  <target name="clean.module.mybatisgenerator" description="cleanup module">
    <delete dir="${mybatisgenerator.output.dir}"/>
    <delete dir="${mybatisgenerator.testoutput.dir}"/>
  </target>
</project>